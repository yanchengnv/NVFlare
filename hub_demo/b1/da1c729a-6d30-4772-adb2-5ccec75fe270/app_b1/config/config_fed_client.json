{
  "format_version": 2,
  "executors": [
    {
      "tasks": [
        "*"
      ],
      "executor": {
        "id": "executor",
        "path": "nvflare.app_common.hub.hub_executor.HubExecutor",
        "args": {
          "pipe_id": "pipe"
        }
      }
    }
  ],
  "components": [
    {
      "id": "pipe",
      "path": "nvflare.fuel.utils.pipe.file_pipe.FilePipe",
      "args": {
        "root_path": "/tmp/nvflare/pipe/b/{JOB_ID}",
        "mode": "passive"
      }
    }
  ]
}